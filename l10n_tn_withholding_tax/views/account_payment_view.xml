<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="l10n_tn_withholding_tax_view_account_payment_form" model="ir.ui.view">
            <field name="name">account.payment.form</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='group2']/field[6]" position="after">
                    <field name="withholding_tax_id"
                           readonly="state != 'draft'"/>
                    <field name="withholding_journal_id"
                           invisible="not withholding_tax_id"
                           required="withholding_tax_id"
                           readonly="state != 'draft'"/>
                </xpath>
                <xpath expr="//div[@name='amount_div']" position="after">
                    <field name="withholding_amount" invisible="not withholding_tax_id" readonly="state != 'draft'"/>
                    <field name="amount_net" invisible="not withholding_tax_id" readonly="state != 'draft'"/>
                </xpath>
                <xpath expr="//button[@name='button_open_journal_entry']" position="after">
                    <button name="button_open_journal_entry_withholding"
                            type="object"
                            class="oe_stat_button"
                            icon="fa-bars"
                            invisible="not withholding_tax_id"
                            groups="account.group_account_user,account.group_account_readonly">
                        <div class="o_stat_info">
                            <span class="o_stat_text">Journal Entry withholding</span>
                        </div>
                    </button>
                </xpath>
            </field>
        </record>
    </data>
</odoo>