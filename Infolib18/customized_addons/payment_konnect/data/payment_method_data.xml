<?xml version="1.0" encoding="utf-8"?>
<odoo noupdate="1">

    <record id="payment_method_bank_card" model="payment.method">
        <field name="name">Bank Card</field>
        <field name="code">bank_card</field>
        <field name="sequence">1</field>
        <field name="active">True</field>
        <field name="image" type="base64" file="payment_konnect/static/img/bank_card.png"/>
        <field name="support_tokenization">False</field>
        <field name="support_express_checkout">False</field>
        <field name="support_refund">none</field>
        <field name="supported_currency_ids"
               eval="[Command.set([
                         ref('base.USD'),
                         ref('base.EUR'),
                         ref('base.TND'),
                     ])]"
        />
        <field name="supported_country_ids"
               eval="[Command.set([
                         ref('base.tn'),
                     ])]"
        />
    </record>

