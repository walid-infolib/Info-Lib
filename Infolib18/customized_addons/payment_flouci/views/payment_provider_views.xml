<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="payment_provider_form" model="ir.ui.view">
        <field name="name">Flouci Provider Form</field>
        <field name="model">payment.provider</field>
        <field name="inherit_id" ref="payment.payment_provider_form"/>
        <field name="arch" type="xml">

            <group name="provider_credentials" position="inside">
                <group invisible="code != 'flouci'">
                    <field name="flouci_app_token" required="code == 'flouci' and state != 'disabled'"/>
                    <field name="flouci_app_secret" required="code == 'flouci' and state != 'disabled'" password="True"/>
                </group>
            </group>

            <group name="payment_form" position="inside">
                <field name="accept_card" invisible="code != 'flouci'"/>
                <field name="session_timeout" invisible="code != 'flouci'"/>
            </group>

        </field>
    </record>

</odoo>