<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="l10n_tn_withholding_tax_withholding_tax_list_view" model="ir.ui.view">
        <field name="name">withholding.tax.list.view</field>
        <field name="model">withholding.tax</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="amount"/>
                <field name="designation"/>
                <field name="account_customer_id"/>
                <field name="account_supplier_id"/>
            </list>
        </field>
    </record>

    <record id="l10n_tn_withholding_tax_withholding_tax_form_view" model="ir.ui.view">
        <field name="name">withholding.tax.form.view</field>
        <field name="model">withholding.tax</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group class="d-flex flex-column">
                        <group>
                            <field name="name" required="1"/>
                            <field name="amount" required="1"/>
                            <field name="designation" required="1"/>
                        </group>
                        <group>
                            <field name="account_customer_id" required="1"/>
                            <field name="account_supplier_id" required="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="l10n_tn_withholding_tax_menu_action" model="ir.actions.act_window">
        <field name="name">Withholding tax</field>
        <field name="res_model">withholding.tax</field>
        <field name="view_mode">list,form</field>
    </record>
    <menuitem id="configuration_withholding_tax_menu" name="Withholding tax" parent="account.account_account_menu"
              action="l10n_tn_withholding_tax_menu_action"/>


</odoo>