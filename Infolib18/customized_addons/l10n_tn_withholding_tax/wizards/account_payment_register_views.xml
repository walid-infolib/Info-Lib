<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="l10n_tn_withholding_tax_view_account_payment_register_form" model="ir.ui.view">
            <field name="name">account.payment.register.form</field>
            <field name="model">account.payment.register</field>
            <field name="inherit_id" ref="account.view_account_payment_register_form"/>
            <field name="arch" type="xml">
                <field name="group_payment" position="after">
                    <field name="withholding_tax_id"/>
                    <field name="withholding_journal_id"
                           invisible="not withholding_tax_id"
                           required="withholding_tax_id"
                    />
                </field>
                <xpath expr="//div[@name='amount_div']" position="after">
                    <field name="withholding_amount" invisible="not withholding_tax_id or not can_edit_wizard or can_group_payments and not group_payment"/>
                    <field name="amount_net" invisible="not withholding_tax_id or not can_edit_wizard or can_group_payments and not group_payment"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>