<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_employee_form_inherit_l10n_tn_payroll" model="ir.ui.view">
        <field name="name">hr.employee.form</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <page name="hr_settings" position="after">
                <page name="agreement" string="Collective Agreement History">
                    <field name="agreement_ids">
                        <list editable="top">
                            <field name="level_id"/>
                            <field name="date_start"/>
                            <field name="date_end"/>
                        </list>
                    </field>
                </page>
            </page>
        </field>

        <field name="arch" type="xml">
            <field name="marital" position="after">
                 <field name="head_of_the_family" />
            </field>
        </field>
    </record>
</odoo>
