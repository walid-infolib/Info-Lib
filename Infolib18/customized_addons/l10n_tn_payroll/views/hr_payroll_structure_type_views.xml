<odoo>
    <record id="hr_payroll_structure_type_view_form_inherit_l10n_tn_payroll" model="ir.ui.view">
        <field name="name">hr.payroll.structure.type.form.view.inherit</field>
        <field name="model">hr.payroll.structure.type</field>
        <field name="inherit_id" ref="hr_payroll.hr_payroll_structure_type_view_form"/>
        <field name="arch" type="xml">
            <field name="default_work_entry_type_id" position="after">
                <field name="default_work_entry_days" invisible="wage_type != 'monthly'"/>
                <field name="default_work_entry_hours" invisible="wage_type != 'monthly'"/>
                <field name="number_of_months_of_salary" invisible="wage_type != 'monthly'"/>
            </field>
        </field>
    </record>
</odoo>