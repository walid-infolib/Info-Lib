<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template
    id="l10n_tn_payroll_report_payslip"
    inherit_id="hr_payroll.report_payslip"
  >
        <xpath expr="//table/tr[@id='employee_info_line_5']" position="after">
            <tr id="employee_info_line_n1">
                <td><strong>Catégorie</strong></td>
                <td><strong>RIB/ RIP</strong></td>
                <td><strong>N° C.N.S.S</strong></td>
                <td><strong>Chef de famille</strong></td>
            </tr>
            <tr id="employee_info_line_n2">
                <td name="categorie"><span
            t-out="o.employee_id.pro_category"
          >2</span></td>
                <td name="RIP"><span
            t-out="o.employee_id.bank_account_id.acc_number"
          >2</span></td>
                <td name="cnss-id"><span
            t-field="o.employee_id.ssnid"
          >John123</span></td>
                <td name="head_of_the_family"><span
            t-if="o.employee_id.head_of_the_family"
          >Oui</span><span t-else="">Non</span></td>
            </tr>
        </xpath>
        <xpath expr="//table/thead/tr/th[@id='line_header_name']" position="replace">
            <th id="line_header_name">Rubrique</th>
        </xpath>
        <xpath expr="//table/thead/tr/th[@id='line_header_hours']" position="replace">
            <th id="line_header_quantity">Quantité</th>
        </xpath>
        <xpath expr="//table/thead/tr/th[@id='line_header_days']" position="replace">
            <th id="line_header_amount_tn" class="text-end">Montant</th>
        </xpath>
        <xpath expr="//table/thead/tr/th[@id='line_header_amount']" position="replace">
            <th id="line_header_deductions">Retenues</th>
        </xpath>
        <xpath expr="//table/tbody/t[@id='worked_days_lines']" position="replace">
        </xpath>
        <xpath
      expr="//table/tbody/t/span/tr/td[@id='payslip_line_rate']"
      position="replace"
    >
            <td id="payslip_line_quantity_tn"><span
          t-if="line.appears_on_payslip_quantity"
          t-esc="line.quantity"
        /></td>
        </xpath>
        <xpath
      expr="//table/tbody/t/span/tr/td[@id='payslip_line_quantity']"
      position="replace"
    >
            <td id="payslip_line_total_tn" class="text-end"><span
          t-if="line.total >0"
          t-esc="line.total"
          t-options='{"widget": "monetary", "display_currency": o.company_id.currency_id}'
        />
            </td>
        </xpath>
<!--        <xpath expr="//table/tbody/t/span/tr/td[@id='payslip_line_total']" position="attributes">-->
<!--            <attribute name="class">text-muted</attribute>-->
<!--        </xpath>-->
        <xpath
      expr="//table/tbody/t/span/tr/td[@id='payslip_line_total']"
      position="replace"
    >
            <td id="payslip_line_retenue" class="text-end"><span
          t-if="line.total &lt;= 0"
          t-esc="line.total*-1"
          t-options='{"widget": "monetary", "display_currency": o.company_id.currency_id}'
        />
            </td>
        </xpath>
    </template>
</odoo>
