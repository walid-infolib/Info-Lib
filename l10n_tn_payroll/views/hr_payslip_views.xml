<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_hr_payslip_form_inherit_l10n_tn_payroll" model="ir.ui.view">
        <field name="name">hr.payslip.form</field>
        <field name="model">hr.payslip</field>
        <field name="inherit_id" ref="hr_payroll.view_hr_payslip_form" />
        <field name="arch" type="xml">
            <field name="struct_id" position="after">
                <field name="marital" />
                <field name="wage_type" />
                <field name="wage" invisible="wage_type != 'monthly'" />
                <field name="hourly_wage" invisible="wage_type != 'hourly'" />
                <field name="allocation_display" />
            </field>
        </field>
    </record>
</odoo>
