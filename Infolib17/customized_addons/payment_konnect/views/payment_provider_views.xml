<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="payment_provider_form" model="ir.ui.view">
        <field name="name">Konnect Provider Form</field>
        <field name="model">payment.provider</field>
        <field name="inherit_id" ref="payment.payment_provider_form"/>
        <field name="arch" type="xml">

            <group name="provider_credentials" position='inside'>
                <group invisible="code != 'konnect'">
                    <field name="konnect_wallet_key" required="code == 'konnect' and state != 'disabled'"/>
                    <field name="konnect_api_key" required="code == 'konnect' and state != 'disabled'" password="True"/>
                </group>
            </group>

            <group name="payment_form" position='inside'>
                <field name="lifespan" required="code == 'konnect' and state != 'disabled'"/>
                <field name="payment_fees" required="code == 'konnect' and state != 'disabled'"/>
                <field name="checkout_form" required="code == 'konnect' and state != 'disabled'"/>
                <field name="silent_webhook" required="code == 'konnect' and state != 'disabled'"/>
                <field name="theme" required="code == 'konnect' and state != 'disabled'"/>
                <field name="type" required="code == 'konnect' and state != 'disabled'"/>
                <field name="description" required="code == 'konnect' and state != 'disabled'"/>
            </group>

        </field>
    </record>

</odoo>