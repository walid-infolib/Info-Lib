<?xml version="1.0" encoding="utf-8"?>
<odoo noupdate="1">

    <record id="payment_acquirer_konnect" model="payment.acquirer">
        <field name="name">Konnect</field>
        <field name="display_as">Konnect Payment</field>
        <field name="sequence">10</field>
        <field
                name="image_128"
                type="base64"
                file="payment_konnect/static/description/icon.png"
        />
        <field name="module_id" ref="base.module_payment_konnect"/>
        <field name="description" type="html">
            <p>
                A tunisian payment gateway to accept online payments via bank cards, e-dinar cards, wallet and flouci.
            </p>
            <ul class="list-inline">
                <li class="list-inline-item"><i class="fa fa-check"/>Online Payment</li>
                <li class="list-inline-item"><i class="fa fa-check"/>Payment Status Tracking</li>
            </ul>
        </field>
        <field name="payment_icon_ids"
               eval="[(6, 0, [
                   ref('payment_konnect.payment_icon_cc_bank_card'),
                   ref('payment_konnect.payment_icon_cc_e_dinar'),
                   ref('payment_konnect.payment_icon_cc_wallet'),
                   ref('payment_konnect.payment_icon_cc_flouci'),
               ])]"
        />
        <field name="provider">konnect</field>
        <field name="redirect_form_view_id" ref="redirect_form"/>
        <field name="support_authorization">False</field>
        <field name="support_fees_computation">False</field>
        <field name="support_tokenization">False</field>
        <field name="allow_tokenization">False</field>
        <field name="country_ids" eval="[(6, 0, [
                ref('base.tn')
            ])]"
        />
    </record>

    <record id="payment_method_konnect" model="account.payment.method">
        <field name="name">Konnect</field>
        <field name="code">konnect</field>
        <field name="payment_type">inbound</field>
    </record>

</odoo>