<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="payment_acquirer_form" model="ir.ui.view">
        <field name="name">Konnect Acquirer Form</field>
        <field name="model">payment.acquirer</field>
        <field name="inherit_id" ref="payment.payment_acquirer_form"/>
        <field name="arch" type="xml">

            <xpath expr='//group[@name="acquirer"]' position='inside'>
                <group attrs="{'invisible': [('provider', '!=', 'konnect')]}">
                    <field name="konnect_wallet_key" attrs="{'required':[('provider', '=', 'konnect'), ('state', '!=', 'disabled')]}"/>
                    <field name="konnect_api_key" attrs="{'required':[('provider', '=', 'konnect'), ('state', '!=', 'disabled')]}" password="True"/>
                </group>
            </xpath>

            <xpath expr='//group[@name="payment_form"]' position='inside'>
                <field name="lifespan" attrs="{'required':[('provider', '=', 'konnect'), ('state', '!=', 'disabled')], 'invisible': [('provider', '!=', 'konnect')]}"/>
                <field name="payment_fees" attrs="{'required':[('provider', '=', 'konnect'), ('state', '!=', 'disabled')], 'invisible': [('provider', '!=', 'konnect')]}"/>
                <field name="checkout_form" attrs="{'required':[('provider', '=', 'konnect'), ('state', '!=', 'disabled')], 'invisible': [('provider', '!=', 'konnect')]}"/>
                <field name="silent_webhook" attrs="{'required':[('provider', '=', 'konnect'), ('state', '!=', 'disabled')],'invisible': [('provider', '!=', 'konnect')]}"/>
                <field name="theme" attrs="{'required':[('provider', '=', 'konnect'), ('state', '!=', 'disabled')], 'invisible': [('provider', '!=', 'konnect')]}"/>
                <field name="type" attrs="{'required':[('provider', '=', 'konnect'), ('state', '!=', 'disabled')],'invisible': [('provider', '!=', 'konnect')]}"/>
                <field name="transaction_description"  attrs="{'required':[('provider', '=', 'konnect'), ('state', '!=', 'disabled')], 'invisible': [('provider', '!=', 'konnect')]}"/>
            </xpath>

        </field>
    </record>

</odoo>